<Window x:Class="PrintTracker.Wpf.Views.AddProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrintTracker.Wpf.Views"
        xmlns:viewmodels="clr-namespace:PrintTracker.Wpf.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:AddProjectViewModel, IsDesignTimeCreatable=False}"
        mc:Ignorable="d"
        Title="AddProjectWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="1" Margin="10">
            <Label Content="Projektname:"/>
            <TextBox Text="{Binding NewProject.Name}"  Width="170" HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10">
            <Label Content="Dateipfad:"/>
            <TextBox Text="{Binding NewProject.FilePath}" Width="170" HorizontalAlignment="Left"/>
            <RibbonFilterMenuButton Label="Durchsuchen" Margin="5,0,0,0" HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="1" Margin="10">
            <Label Content="Genutzer Drucker:"/>
            <TextBox Text="{Binding NewProject.PrinterUsed}" Width="170" HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="2" Margin="10">
            <Label Content="Gedruckt am:"/>
            <!--<TextBox x:Name="ProjectNameTxtBox" Width="200" HorizontalAlignment="Left"/>-->
            <DatePicker Text="{Binding NewProject.PrintedAt}" Width="170" HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="2" Margin="10">
            <Label Content="Zuletzt Geändert:"/>
            <DatePicker Text="{Binding NewProject.LastModifiedAt}" Width="170" HorizontalAlignment="Left"/>
            <!--<TextBox x:Name="ProjetNameText" Width="200" HorizontalAlignment="Left"/>-->
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="2" Margin="10">
            <Label Content="Druckstunden:"/>
            <TextBox Text="{Binding NewProject.PrintDurationHours}" Width="170" HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="3" Margin="10" Grid.ColumnSpan="2">
            <Label Content="Genutztes Filament:"/>
            <TextBox Text="{Binding NewProject.FilamentUsed}" Width="170" HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="3" Margin="10" Grid.ColumnSpan="2">
            <Label Content="Filamentpreis:"/>
            <TextBox Text="{Binding NewProject.FilamentPrice}" Width="170" HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="3" Margin="10" >
            <Label Content="Druckergebnis:"/>
            <RadioButton Content="Erfolgreich" IsChecked="{Binding NewProject.PrintResult}" GroupName="PrintResult" Margin="0,0,0,5"/>
            <RadioButton Content="Fehlgeschlagen" IsChecked="False" GroupName="PrintResult"/>
        </StackPanel>
        <Button Content="Speichern" Command="{Binding SaveCommand}" CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" Width="100" Margin="0,10,5,0" Grid.Row="3" Grid.Column="2" HorizontalAlignment="Center"/>
        <Button Content="Abbrechen" IsCancel="True" Width="100" Margin="0,10,5,0" Grid.Row="3" Grid.Column="3"  HorizontalAlignment="Center"/>
    </Grid>
</Window>
